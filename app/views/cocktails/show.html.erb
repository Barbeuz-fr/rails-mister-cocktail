<div class="container">
<!-- Title -->

<h1 class="text-white text-center"><%= @cocktail.name %></h1>

<!-- Photo -->
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 400, width: 500, crop: :fill, class:"image-center" %>
<% else %>
  <p></p>
<% end %>

  <div>
    <!-- Sous-titre -->
  <h3 class="text-white"><strong>Recette</strong></h3>

  <!-- Display all doses -->
  <% @doses.each do |dose|%>
    <% if dose.cocktail_id == @cocktail.id %>
      <p class="text-white">
        <%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to cocktail_dose_path(dose), method: :delete, class:"text-white" do %>
          <i class="fa fa-trash" aria-hidden="true" target="_blank"></i>
          <% end %>
        </p>
    <% end %>
  <% end %>

  <!-- Link to add a dose -->
  <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail), class:"btn btn-light"  %>
  </div>
</div>
