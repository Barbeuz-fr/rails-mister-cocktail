<%= link_to "Back to cocktail list", root_path %>

<h1>Cocktail: <%= @cocktail.name %></h1>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 400, width: 500, crop: :fill %>
<% else %>
  <p>No photo attached</p>
<% end %>

<div class="container">
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %>

  <% @doses.each do |dose|%>
    <% if dose.cocktail_id == @cocktail.id %>
      <p>Ingr√©dient: <%= dose.ingredient.name %></p>
      <p>Volume: <%= dose.description %></p>
      <%= link_to "Delete dose",
                  cocktail_dose_path(dose),
                  method: :delete %>
    <% end %>
  <% end %>
</div>
