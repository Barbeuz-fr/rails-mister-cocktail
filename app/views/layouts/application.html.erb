<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">



    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <!-- Navbar -->
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
        <%= link_to "/", class: "navbar-brand" do %>
          <%= image_tag "https://images.assetsdelivery.com/compings_v2/fokaspokas/fokaspokas1808/fokaspokas180802060.jpg" %>
        <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">

            <li class="nav-item active">
              <a class="nav-link" href="#">Notre concept</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Nos valeurs</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Nos services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Blog</a>
            </li>
          </ul>
        </div>
      </div>

      <div class="content-wrapper">
        <%= yield %>
      </div>


    <!-- Footer -->
    <div class="mt-5"></div>
    <div class="footer text-center padding-bottom-3">
      <ul>
        <div class="footer-links">
          <a href="#"><i class="fab fa-instagram text-white"></i></a>
          <a href="#"><i class="fab fa-facebook text-white"></i></a>
          <a href="#"><i class="fab fa-twitter text-white"></i></a>
          <a href="#"><i class="fab fa-linkedin text-white"></i></a>
        </div>
        <div><br></div>
        <div class="footer-copyright grey-text-color">
          Little Ecologist <i class="fas fa-copyright"></i>
        </div>
      </ul>
    </div>
    <div class="mb-3">
    </div>

    <!-- Importation javascript -->
  </body>
</html>
